{
  "mcpServers": {
    "Snyk": {
        "command": "npx",
        "args": [
          "-y",
          "snyk@latest",
          "mcp",
          "-t",
          "stdio"
        ],
        "env": {
          "PATH": "/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:/usr/sbin:/sbin:${HOME}/.nvm/versions/node/*/bin:${HOME}/.fnm/current/bin:${HOME}/.volta/bin"
        }
    }
  }
}